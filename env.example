# 应用 Base URL
APP_BASE_URL=http://localhost:7001

# 数据库配置
DATABASE_URL="postgresql://username:password@localhost:5432/tinyship"

# 认证配置
BETTER_AUTH_SECRET="your-secret-key-here-32-characters-minimum"
BETTER_AUTH_URL="http://localhost:7001"

# OAuth 配置 （可选）

## Google Oauth 登录
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

## Github Oauth 登录
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

## 微信 OAuth 登录（可选）
NEXT_PUBLIC_WECHAT_APP_ID="your-wechat-app-id"
WECHAT_APP_SECRET="your-wechat-app-secret"


# 邮件服务（可选）
## Resend 配置
RESEND_API_KEY="your-resend-api-key"
EMAIL_DEFAULT_FROM="noreply@yourdomain.com"

# 阿里云通用配置（短信、OSS 等服务共用）
# 注意：这组密钥可同时用于阿里云短信和 OSS 存储服务
ALIYUN_ACCESS_KEY_ID="your-aliyun-key-id"
ALIYUN_ACCESS_KEY_SECRET="your-aliyun-key-secret"

# 短信服务（可选）

## 阿里云短信（使用上面的 ALIYUN_ACCESS_KEY）
ALIYUN_SMS_SIGN_NAME="your-sms-sign-name" #签名名称
ALIYUN_SMS_TEMPLATE_CODE="SMS_000000000" #模版Code

## TWILLO 短信
TWILIO_ACCOUNT_SID="AC1111111111111111"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_DEFAULT_FROM="+1234567890"

# 支付配置（可选）

## 微信支付
WECHAT_PAY_APP_ID="微信支付 APP ID"
WECHAT_PAY_MCH_ID="微信支付商家 ID"
WECHAT_PAY_API_KEY="微信支付 API KEY 密码"
WECHAT_PAY_NOTIFY_URL="微信支付webhook 回调地址 https://your-domain.com/api/payment/webhook/wechat"
# 微信支付证书 (PEM 格式，使用 \n 转义符)
WECHAT_PAY_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\nMIIEpAIBAAKCAQEAtWmyOwo...\n-----END RSA PRIVATE KEY-----"
WECHAT_PAY_PUBLIC_KEY="-----BEGIN CERTIFICATE-----\nMIIEpDCCA4ygAwIBAgIUa...\n-----END CERTIFICATE-----"
WECHAT_PAY_PAYMENT_PUBLIC_KEY="-----BEGIN PUBLIC KEY----- # 微信支付公钥验证（新的验证方式，推荐，非必需，如果不使用这种模式请删除这行）"
WECHAT_PAY_PUBLIC_KEY_ID="PUB_KEY_ID_0000000000000024101100397200000006 # 微信支付公钥验证（新的验证方式，推荐，非必需， 如果不使用这种模式请删除这行）"

## Stripe 支付
STRIPE_PUBLIC_KEY="your-stripe-publishable-key"
STRIPE_SECRET_KEY="your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="your-stripe-webhook-secret"

## CREEM 支付
CREEM_API_KEY="your-creem-api-key" 
CREEM_WEBHOOK_SECRET="your-creem-webhook-secret"
CREEM_SERVER_URL="creem-server-url 默认为 https://test-api.creem.io，测试环境"

# Captcha 验证码配置 (可选)

## Cloudflare TURNSTILE
TURNSTILE_SECRET_KEY="your-trunstile-secret-key"
NEXT_PUBLIC_TURNSTILE_SITE_KEY="your-trunstile-site-key"

# AI 配置 (可选)

## AI 提供商配置
AI_PROVIDER="qwen"  # 默认使用的 AI 提供商

## OpenAI 配置
OPENAI_API_KEY="your-openai-api-key"
OPENAI_BASE_URL="optional-base-url"  # 可选：自定义 API 基础地址

## 通义千问 (Qwen) 配置
QWEN_API_KEY="your-qwen-api-key"
QWEN_BASE_URL="https://dashscope.aliyuncs.com/compatible-mode/v1"

## DeepSeek 配置
DEEPSEEK_API_KEY="your-deepseek-api-key"

# 存储配置 (可选)

## 存储提供商选择
STORAGE_PROVIDER="oss"  # 可选值: oss, s3, r2

## 阿里云 OSS 配置
## 注意：如果已配置 ALIYUN_ACCESS_KEY_ID/SECRET，则无需重复配置下面两项
## OSS 会自动复用阿里云通用密钥
OSS_REGION="oss-cn-shanghai"
# OSS_ACCESS_KEY_ID="your-oss-access-key-id"      # 可选，默认使用 ALIYUN_ACCESS_KEY_ID
# OSS_ACCESS_KEY_SECRET="your-oss-access-key-secret"  # 可选，默认使用 ALIYUN_ACCESS_KEY_SECRET
OSS_BUCKET="your-bucket-name"
OSS_ENDPOINT="oss-cn-shanghai.aliyuncs.com"  # 可选

## AWS S3 配置
S3_REGION="us-east-1"
S3_ACCESS_KEY_ID="your-s3-access-key-id"
S3_ACCESS_KEY_SECRET="your-s3-access-key-secret"
S3_BUCKET="your-bucket-name"
S3_ENDPOINT=""  # 可选：自定义端点（用于 S3 兼容服务）
S3_FORCE_PATH_STYLE="false"  # 可选：强制路径样式访问

## Cloudflare R2 配置
R2_ACCOUNT_ID="your-cloudflare-account-id"
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_ACCESS_KEY_SECRET="your-r2-access-key-secret"
R2_BUCKET="your-bucket-name"